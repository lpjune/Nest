<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_spectrum"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">


    <!--Camera Feed-->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="960dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


    <!--Server Log-->
    <include layout="@layout/server_log" />


    <!--Server Log Button-->
    <Button
        android:id="@+id/logButton"
        android:layout_width="24dp"
        android:layout_height="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/systemHaltButton"
        app:layout_constraintTop_toBottomOf="@+id/camera_chan"
        android:background="@drawable/menu"
        android:text="Â«"
        android:textColor="@color/ButtonTextColor"/>


    <!--Top Bar-->
    <include layout="@layout/top_bar" />


    <!--Bottom Bar-->
    <include layout="@layout/bottom_bar" />


    <!--Burger Menu Button-->
    <Button
        android:id="@+id/burgerButton"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:alpha=".75"
        android:background="@drawable/hamburger_button"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/control_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/control_panel"
        app:layout_constraintVertical_bias="0.0"
        android:onClick="showPopup" />


    <!--System Halt Button-->
    <Button
        android:id="@+id/systemHaltButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/system_halt_button"
        android:text="@string/system_halt"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/control_panel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>