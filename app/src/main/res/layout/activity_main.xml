<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background ="#ffffff">

    <!-- layout/*.xml -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/log_button"
        android:layout_width="27dp"
        android:layout_height="202dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#E5303030"
        tools:layout_editor_absoluteX="566dp"
        tools:layout_editor_absoluteY="63dp" />


    <ImageButton
        android:id="@+id/menu_button"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:background="@android:color/white"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/menu_button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="303dp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/control_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:background="#E5303030"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/menu_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971">

        <Switch
            android:id="@+id/doorswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/switch_margin"
            android:text="@string/open_door"
            android:textColor="@color/ButtonTextColor" />

        <Switch
            android:id="@+id/roofswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/switch_margin"
            android:text="@string/open_roof"
            android:textColor="@color/ButtonTextColor" />

        <Switch
            android:id="@+id/extendpadswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/switch_margin"
            android:text="@string/extend_pad"
            android:textColor="@color/ButtonTextColor" />

        <Switch
            android:id="@+id/raisepadswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/switch_margin"
            android:text="@string/raise_pad"
            android:textColor="@color/ButtonTextColor" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>